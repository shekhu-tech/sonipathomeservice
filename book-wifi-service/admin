  <script>
        // Admin credentials (in production, this should be handled server-side)
        const ADMIN_CREDENTIALS = {
            'admin': 'admin123',
            'sonipat_admin': 'sonipat2024',
            'isp_admin': 'secure123'
        };

        let isLoggedIn = false;
        let sessionTimeout;

        // Check if user is already logged in (using sessionStorage)
        function checkLoginStatus() {
            const loginStatus = sessionStorage.getItem('admin_logged_in');
            const username = sessionStorage.getItem('admin_username');
            
            if (loginStatus === 'true' && username) {
                isLoggedIn = true;
                showAdminPanel(username);
                resetSessionTimeout();
            } else {
                showLoginModal();
            }
        }

        // Show login modal
        function showLoginModal() {
            document.getElementById('login-modal').style.display = 'flex';
            document.getElementById('admin-header').style.display = 'none';
            document.getElementById('admin-main').style.display = 'none';
        }

        // Show admin panel
        function showAdminPanel(username) {
            document.getElementById('login-modal').style.display = 'none';
            document.getElementById('admin-header').style.display = 'block';
            document.getElementById('admin-main').style.display = 'block';
            
            // Update welcome message
            document.getElementById('welcome-message').textContent = `Welcome, ${username}`;
        }

        // Handle login form submission
        document.getElementById('login-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value;
            const loginBtn = document.getElementById('login-btn');
            const loginBtnText = document.getElementById('login-btn-text');
            const loginSpinner = document.getElementById('login-spinner');
            const errorDiv = document.getElementById('login-error');
            
            // Show loading state
            loginBtn.disabled = true;
            loginBtnText.style.display = 'none';
            loginSpinner.classList.remove('hidden');
            errorDiv.classList.add('hidden');
            
            // Simulate login delay
            setTimeout(() => {
                // Check credentials
                if (ADMIN_CREDENTIALS[username] && ADMIN_CREDENTIALS[username] === password) {
                    // Successful login
                    isLoggedIn = true;
                    sessionStorage.setItem('admin_logged_in', 'true');
                    sessionStorage.setItem('admin_username', username);
                    
                    showAdminPanel(username);
                    showNotification('Login successful! Welcome to the admin panel.', 'success');
                    resetSessionTimeout();
                    
                    // Reset form
                    document.getElementById('login-form').reset();
                } else {
                    // Failed login
                    errorDiv.classList.remove('hidden');
                    document.getElementById('password').value = '';
                    showNotification('Invalid credentials. Please check username and password.', 'error');
                }
                
                // Reset button
                loginBtn.disabled = false;
                loginBtnText.style.display = 'inline';
                loginSpinner.classList.add('hidden');
            }, 1500);
        });

        // Handle logout
        document.getElementById('logout-btn').addEventListener('click', function() {
            // Create logout confirmation
            const confirmLogout = document.createElement('div');
            confirmLogout.className = 'fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center';
            confirmLogout.innerHTML = `
                <div class="bg-white rounded-xl p-6 max-w-md mx-4 shadow-2xl">
                    <div class="text-center mb-6">
                        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Confirm Logout</h3>
                        <p class="text-gray-600">Are you sure you want to logout from the admin panel?</p>
                    </div>
                    <div class="flex space-x-4">
                        <button id="cancel-logout" class="flex-1 bg-gray-500 text-white py-2 px-4 rounded-lg hover:bg-gray-600 transition-colors">Cancel</button>
                        <button id="confirm-logout" class="flex-1 bg-red-600 text-white py-2 px-4 rounded-lg hover:bg-red-700 transition-colors">Logout</button>
                    </div>
                </div>
            `;
            
            document.body.appendChild(confirmLogout);

            document.getElementById('cancel-logout').addEventListener('click', () => {
                document.body.removeChild(confirmLogout);
            });

            document.getElementById('confirm-logout').addEventListener('click', () => {
                // Clear session
                sessionStorage.removeItem('admin_logged_in');
                sessionStorage.removeItem('admin_username');
                isLoggedIn = false;
                clearTimeout(sessionTimeout);
                
                // Reset form
                document.getElementById('login-form').reset();
                document.getElementById('login-error').classList.add('hidden');
                
                // Show login modal
                showLoginModal();
                showNotification('Logged out successfully.', 'success');
                
                document.body.removeChild(confirmLogout);
            });
        });

        // Notification system
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 z-50 px-6 py-3 rounded-lg shadow-lg text-white transform transition-all duration-300 ${
                type === 'success' ? 'bg-green-500' : 'bg-red-500'
            }`;
            notification.innerHTML = `
                <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        ${type === 'success' 
                            ? '<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>'
                            : '<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>'
                        }
                    </svg>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Animate in
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 100);
            
            // Remove after 4 seconds
            setTimeout(() => {
                if (document.body.contains(notification)) {
                    notification.style.transform = 'translateX(100%)';
                    setTimeout(() => {
                        if (document.body.contains(notification)) {
                            document.body.removeChild(notification);
                        }
                    }, 300);
                }
            }, 4000);
        }

        // Session timeout (30 minutes)
        function resetSessionTimeout() {
            clearTimeout(sessionTimeout);
            if (isLoggedIn) {
                sessionTimeout = setTimeout(() => {
                    showNotification('Session expired. Please login again.', 'error');
                    sessionStorage.removeItem('admin_logged_in');
                    sessionStorage.removeItem('admin_username');
                    isLoggedIn = false;
                    showLoginModal();
                }, 30 * 60 * 1000); // 30 minutes
            }
        }

        // Reset timeout on user activity
        document.addEventListener('click', resetSessionTimeout);
        document.addEventListener('keypress', resetSessionTimeout);
        document.addEventListener('mousemove', resetSessionTimeout);

        // Tab functionality
        document.querySelectorAll('.admin-tab').forEach(button => {
            button.addEventListener('click', function() {
                if (!isLoggedIn) return;
                
                const targetTab = this.getAttribute('data-tab');
                
                // Update active tab
                document.querySelectorAll('.admin-tab').forEach(btn => {
                    btn.classList.remove('tab-active');
                    btn.classList.add('tab-inactive');
                });
                this.classList.remove('tab-inactive');
                this.classList.add('tab-active');
                
                // Show target section
                document.querySelectorAll('.admin-section').forEach(section => {
                    section.classList.add('hidden');
                });
                document.getElementById(targetTab + '-tab').classList.remove('hidden');
                
                resetSessionTimeout();
            });
        });

        // Demo credentials click functionality
        document.querySelectorAll('.credential-card').forEach(credentialDiv => {
            credentialDiv.addEventListener('click', function() {
                const username = this.getAttribute('data-username');
                const password = this.getAttribute('data-password');
                
                document.getElementById('username').value = username;
                document.getElementById('password').value = password;
                
                // Add visual feedback
                this.style.transform = 'scale(0.98)';
                setTimeout(() => {
                    this.style.transform = 'scale(1.02)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 100);
                }, 100);
                
                showNotification(`Credentials filled: ${username}`, 'success');
            });
        });

        // Initialize login check when page loads
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Admin panel loaded successfully');
            console.log('Available credentials:', Object.keys(ADMIN_CREDENTIALS));
            checkLoginStatus();
        });

        // Add immediate initialization
        window.addEventListener('load', function() {
            console.log('Window loaded, initializing admin panel');
            checkLoginStatus();
        });

        // Prevent back button bypass
        window.addEventListener('popstate', function() {
            if (!isLoggedIn) {
                showLoginModal();
            }
        });
    </script>
